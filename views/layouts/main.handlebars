<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Auto Auction</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header>
    <h1>
      Auto Auction
    </h1>
    
    {{!-- side navigation --}}
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="#">About</a>
        <a href="/">Auction Gallery</a>
        {{#unless logged_in}}
        <a href="/login">Login</a>
        {{/unless}}
        <!-- Only display the logout button if the user is logged in -->
        {{#if logged_in}}
        <nav>
          <a href="/profile">My Profile</a>
          <a class="btn" id="logout">logout</a>
        </nav>
        {{/if}}
    </div>
  </header>
  <div>
      <div class="row" id="action-bar">
        <div class="col-8">
            <span class="menu-button" onclick="openNav()"> &#9776; </span>
        </div>
        <div class="col-4">
            <form class="search-form" action="submit">
                <input class="search-box" type="text" placeholder="Search by make">
                <input type="submit" value="Search" id="search-submit">
            </form>
        </div>
    </div>
  <main class="container container-fluid mt-5">
    {{{ body }}}
  </main>
  <footer>
      
  </footer>

  <!-- Only include the logout script if the user is logged in -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="/js/sidenav.js"></script>
</body>

</html>
